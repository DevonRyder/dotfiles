[colors]
font-icons = #c0c0c0
accent = ${xrdb:color4}
accent-alt = #A36AC7
urgent = #F96A38

background = ${xrdb:background}
background-alt = ${xrdb:color18}
foreground = ${xrdb:color15}

[bar/main]
monitor = ${env:MONITOR:DP-1}
width = 100%
height = 35
radius = 0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

border-color = #00000000
border-left-size = 6
border-right-size = ${self.border-left-size}
border-top-size = 6

line-size = 1

padding-left = 0
padding-right = 0
module-margin-left = 5
module-margin-right = 5

font-0 = FontAwesome:pixelsize=10;3
font-1 = Roboto:pixelsize=10;3
font-2 = Siji:pixelsize=10;3

modules-left = i3 window 
modules-center =  
modules-right = weather mpd cpu memory temperature vpn wireless ethernet datetime

label-layout = %layout%

label-indicator-padding = 0
label-indicator-margin = 0

; --------------- ;
; --- MODULES --- ;
; --------------- ;

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

label-background = ${root.background}

label-mode-padding = 2
label-mode-foreground = ${colors.urgent}
label-mode-background = ${root.background}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.accent}
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.accent}
label-focused-padding = 6

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${xrdb:color20}
label-unfocused-background = ${self.label-background}
label-unfocused-underline = ${colors.background}
label-unfocused-padding = 6

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-foreground = ${colors.foreground}
label-visible-background = ${self.label-background}
label-visible-underline = 
label-visible-padding = 6

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.urgent}
label-urgent-background = ${self.label-background}
label-urgent-underline = ${colors.urgent}
label-urgent-padding = 6

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

[module/window]
type = internal/xwindow
format-prefix = ""
format-prefix-padding = 4
format-prefix-foreground = ${colors.font-icons}

[module/weather]
type = custom/script
interval = 1200
format = <label>
exec = ~/.config/polybar/weather.py

format-prefix = " "
format-prefix-padding = 4
format-prefix-foreground = ${colors.font-icons}

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600
password = 

interval = 2

padding = 5

[module/cpu]
type = internal/cpu
interval = 2

format = <label> 
format-prefix = ""
format-prefix-padding = 4
format-prefix-foreground = ${colors.font-icons}
label =  "%percentage%%"
label-padding-right = 3

[module/memory]
type = internal/memory
interval = 2

label = "%gb_used%"
label-padding-right = 3

format = <label> 
format-prefix = " "
format-prefix-padding = 4
format-prefix-foreground = ${colors.font-icons}

[module/temperature]
type = custom/script
interval = 5
exec-if = sensors
exec = sensors | grep Core | awk '{print substr($3, 2, length($3)-5)}'

format = "<label>"
format-prefix = ""
format-prefix-padding = 4
format-prefix-foreground = ${colors.font-icons}
format-suffix = "°C"
format-suffix-padding-left = 2

[module/datetime]
type = internal/date
interval = 5
date = %A,  %B  %d  %{F#61afef} at %{F-}  %I:%M %P"
label =  "%date%"
label-padding = 5
label-foreground = ${colors.foreground}
label-background = ${colors.background-alt}

[module/vpn]
type = custom/script
format-padding = 2
exec = pgrep openvpn
interval = 5
label = "VPN"
format-prefix = ""
format-prefix-padding = 4

[module/wireless]
type = internal/network
interface = wlp0s26u1u6
internal = 5
format-connected = <ramp-signal> <label-connected>  
label-connected = %essid%  

ramp-signal-0 = 
ramp-signal-1 =  
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 

[module/ethernet]
type = internal/network
interface = eno1
label-connected = %linkspeed%
ramp-signal-0 = ""
ramp-signal-0-padding = 4
format-prefix-padding = 4
format-prefix-foreground = ${colors.font-icons}
format-connected = <ramp-signal><label-connected>
